{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "paths": {
      "*": [
        "./*.ts",
        "./types/*.d.ts"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false
  }
}
